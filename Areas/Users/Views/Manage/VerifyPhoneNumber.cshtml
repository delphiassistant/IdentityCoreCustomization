@model IdentityCoreCustomization.Models.Identity.UserPhoneTokenConfirmViewModel
@{
    ViewData["Title"] = "تأیید شماره موبایل";
}

<div class="page-header">
    <div class="d-flex align-items-center">
        <div class="page-title-icon">
            <i class="fa-solid fa-message-sms"></i>
        </div>
        <div class="flex-grow-1">
            <h1 class="page-title mb-0">تأیید شماره موبایل</h1>
            <p class="page-description">وارد کردن کد تأیید ارسال شده به موبایل</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="manage-card">
            <div class="manage-card-header">
                <h2 class="manage-card-title">
                    <i class="fa-solid fa-key text-success"></i>
                    کد تأیید
                </h2>
            </div>
            <div class="manage-card-body">
                <div class="alert alert-info mb-4">
                    <i class="fa-solid fa-info-circle"></i>
                    کد تأیید ۶ رقمی که به شماره موبایل شما ارسال شد را وارد کنید.
                </div>

                <form asp-action="VerifyPhoneNumber" class="manage-form">
                    <input type="hidden" asp-for="AuthenticationKey"/>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-4">
                        <label asp-for="AuthenticationCode" class="form-label">
                            <i class="fa-solid fa-key text-success"></i>
                            @Html.DisplayNameFor(m => m.AuthenticationCode)
                        </label>
                        <input asp-for="AuthenticationCode" 
                               class="form-control text-center" 
                               autocomplete="off"                                
                               maxlength="6"
                               style="font-size: 1.5rem; letter-spacing: 0.5rem; font-weight: 600;"
                               autofocus />
                        <span asp-validation-for="AuthenticationCode" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="fa-solid fa-mobile-screen-button"></i>
                            کد ۶ رقمی ارسال شده به موبایل خود را وارد کنید
                        </small>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="manage-btn manage-btn-primary">
                            <i class="fa-solid fa-check"></i> تأیید شماره موبایل
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i> بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="manage-card">
            <div class="manage-card-header">
                <h2 class="manage-card-title">
                    <i class="fa-solid fa-info-circle text-info"></i>
                    راهنما
                </h2>
            </div>
            <div class="manage-card-body">
                <h6 class="fw-bold mb-2">نکات مهم:</h6>
                <ul class="small mb-3">
                    <li>کد تأیید ممکن است چند دقیقه طول بکشد</li>
                    <li>کد تأیید معتبر محدود است</li>
                    <li>اگر کد را دریافت نکردید، دوباره درخواست دهید</li>
                </ul>

                <div class="alert alert-warning mb-0">
                    <h6 class="fw-bold mb-2">
                        <i class="fa-solid fa-mobile-screen-button"></i> پیامک دریافت نشد؟
                    </h6>
                    <p class="small mb-0">
                        بازگشت به صفحه قبل و درخواست مجدد ارسال کد
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Auto-submit on 6 digits
        const codeInput = document.querySelector('[asp-for="AuthenticationCode"]');
        codeInput.addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
            if (this.value.length === 6) {
                this.form.classList.add('auth-loading');
                setTimeout(() => this.form.submit(), 300);
            }
        });

        document.querySelector('form').addEventListener('submit', function(e) {
            if ($(this).valid()) {
                this.classList.add('auth-loading');
            }
        });
    </script>
}