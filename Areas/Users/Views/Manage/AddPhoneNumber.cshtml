@model AddPhoneNumberModel
@{
    ViewData["Title"] = "افزودن شماره موبایل";
}

<div class="page-header">
    <div class="d-flex align-items-center">
        <div class="page-title-icon">
            <i class="fa-solid fa-mobile-screen-button"></i>
        </div>
        <div class="flex-grow-1">
            <h1 class="page-title mb-0">افزودن شماره موبایل</h1>
            <p class="page-description">افزودن یا تغییر شماره موبایل حساب کاربری</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="manage-card">
            <div class="manage-card-header">
                <h2 class="manage-card-title">
                    <i class="fa-solid fa-phone text-success"></i>
                    شماره موبایل
                </h2>
            </div>
            <div class="manage-card-body">
                <form method="post" class="manage-form">
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                    
                    <div class="mb-4">
                        <label asp-for="PhoneNumber" class="form-label">
                            <i class="fa-solid fa-mobile-screen-button text-info"></i>
                            @Html.DisplayNameFor(m => m.PhoneNumber)
                        </label>
                        <input asp-for="PhoneNumber" class="form-control ltr" dir="ltr" autofocus />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">
                            <i class="fa-solid fa-info-circle"></i>
                            شماره موبایل خود را با فرمت ۱۱ رقمی وارد کنید
                        </small>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="manage-btn manage-btn-primary">
                            <i class="fa-solid fa-paper-plane"></i> ارسال کد تأیید
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i> بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="manage-card">
            <div class="manage-card-header">
                <h2 class="manage-card-title">
                    <i class="fa-solid fa-info-circle text-info"></i>
                    چرا شماره موبایل؟
                </h2>
            </div>
            <div class="manage-card-body">
                <ul class="small mb-3">
                    <li>بازیابی حساب کاربری</li>
                    <li>احراز هویت دو مرحله‌ای</li>
                    <li>دریافت کدهای امنیتی</li>
                    <li>اعلان‌های مهم</li>
                </ul>

                <div class="alert alert-info mb-0">
                    <h6 class="fw-bold mb-2">
                        <i class="fa-solid fa-shield-halved"></i> امنیت
                    </h6>
                    <p class="small mb-0">
                        شماره موبایل شما برای افزایش امنیت حساب و بازیابی آن استفاده می‌شود.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            if ($(this).valid()) {
                this.classList.add('auth-loading');
            }
        });
    </script>
}
