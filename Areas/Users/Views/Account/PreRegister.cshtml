@model IdentityCoreCustomization.Models.Identity.UserPhoneToken

@{
    ViewData["Title"] = "تأیید شماره موبایل";
    Layout = "~/Areas/Users/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="icon">
                <i class="fa-solid fa-mobile-screen-button"></i>
            </div>
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="auth-body">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="auth-alert auth-alert-danger">
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <div asp-validation-summary="ModelOnly" class="mb-0"></div>
                </div>
            }

            <div class="auth-alert auth-alert-info mb-4">
                <i class="fa-solid fa-info-circle"></i>
                <p class="mb-0">
                    <strong>مرحله اول:</strong> شماره موبایل خود را وارد کنید تا کد تأیید برای شما ارسال شود.
                </p>
            </div>

            <form asp-action="PreRegister" class="auth-form">
                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="form-label">
                        <i class="fa-solid fa-mobile-screen-button text-info"></i>
                        @Html.DisplayNameFor(m => m.PhoneNumber)
                    </label>
                    <input asp-for="PhoneNumber" class="form-control ltr" dir="ltr" autofocus />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    <small class="text-muted d-block mt-2">
                        <i class="fa-solid fa-lightbulb"></i>
                        شماره موبایل خود را با فرمت ۱۱ رقمی وارد کنید
                    </small>
                </div>

                <button type="submit" class="auth-btn auth-btn-primary">
                    <i class="fa-solid fa-paper-plane"></i>
                    ارسال کد تأیید
                </button>

                <div class="auth-links">
                    <div class="auth-divider">
                        <span>قبلاً ثبت‌نام کرده‌اید؟</span>
                    </div>
                    
                    <a asp-action="Login" class="auth-link" style="color: var(--auth-primary); font-weight: 600;">
                        <i class="fa-solid fa-right-to-bracket fa-flip-horizontal text-primary"></i>
                        <span>ورود به حساب کاربری</span>
                    </a>
                </div>
            </form>

            <div class="alert alert-warning text-start mt-4 mb-0">
                <h6 class="fw-bold mb-2">
                    <i class="fa-solid fa-shield-halved"></i> نکته امنیتی
                </h6>
                <p class="small mb-0">
                    شماره موبایل شما برای احراز هویت و بازیابی حساب کاربری استفاده می‌شود. 
                    لطفاً شماره‌ای را وارد کنید که به آن دسترسی دارید.
                </p>
            </div>
        </div>
    </div>

    <div class="back-to-home">
        <a href="/">
            <i class="fa-solid fa-home"></i>
            بازگشت به صفحه اصلی
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Add loading state on form submit (only if valid)
        document.querySelector('form').addEventListener('submit', function(e) {
            // Check if form is valid using jQuery validation
            if ($(this).valid()) {
                this.classList.add('auth-loading');
            }
        });
    </script>
}
