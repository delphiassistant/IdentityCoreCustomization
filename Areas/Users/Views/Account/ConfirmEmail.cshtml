@{
    ViewData["Title"] = "تأیید ایمیل";
    Layout = "~/Areas/Users/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="icon">
                @if (!string.IsNullOrEmpty(ViewBag.StatusMessage) && !ViewBag.StatusMessage.ToString().StartsWith("Error"))
                {
                    <i class="fa-solid fa-circle-check"></i>
                }
                else
                {
                    <i class="fa-solid fa-circle-xmark"></i>
                }
            </div>
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="auth-body">
            @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
            {
                var statusClass = ViewBag.StatusMessage.StartsWith("Error") ? "danger" : "success";
                var iconClass = ViewBag.StatusMessage.StartsWith("Error") ? "circle-exclamation" : "check-circle";
                
                <div class="auth-alert auth-alert-@statusClass">
                    <i class="fa-solid fa-@iconClass"></i>
                    <p class="mb-0">
                        @ViewBag.StatusMessage
                    </p>
                </div>

                @if (!ViewBag.StatusMessage.ToString().StartsWith("Error"))
                {
                    <div class="text-center py-4">
                        <div class="feature-icon feature-icon-success mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2.5rem;">
                            <i class="fa-solid fa-envelope-circle-check"></i>
                        </div>
                        <h4 class="mb-3">ایمیل شما تأیید شد</h4>
                        <p class="text-muted mb-4">
                            اکنون می‌توانید از تمام امکانات حساب کاربری خود استفاده کنید.
                        </p>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="feature-icon feature-icon-danger mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2.5rem;">
                            <i class="fa-solid fa-triangle-exclamation"></i>
                        </div>
                        <h4 class="mb-3">خطا در تأیید ایمیل</h4>
                        <p class="text-muted mb-4">
                            لینک تأیید نامعتبر یا منقضی شده است.
                        </p>
                    </div>
                }
            }

            <div class="auth-links">
                <div class="auth-divider">
                    <span>مراحل بعدی</span>
                </div>
                
                <a asp-action="Login" class="auth-link" style="color: var(--auth-primary); font-weight: 600;">
                    <i class="fa-solid fa-right-to-bracket fa-flip-horizontal text-primary"></i>
                    <span>ورود به حساب کاربری</span>
                </a>
                
                @if (!string.IsNullOrEmpty(ViewBag.StatusMessage) && ViewBag.StatusMessage.ToString().StartsWith("Error"))
                {
                    <a asp-action="ResendEmailConfirmation" class="auth-link">
                        <i class="fa-solid fa-paper-plane text-info"></i>
                        <span>ارسال مجدد ایمیل تأیید</span>
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="back-to-home">
        <a href="/">
            <i class="fa-solid fa-home"></i>
            بازگشت به صفحه اصلی
        </a>
    </div>
</div>