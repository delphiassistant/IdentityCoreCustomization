@model ResetPasswordModel
@{
    ViewData["Title"] = "بازنشانی کلمه عبور";
    Layout = "~/Areas/Users/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <style>
        .password-strength {
            height: 4px;
            border-radius: 2px;
            margin-top: 0.5rem;
            transition: all 0.3s ease;
        }
        
        .requirement-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0;
            font-size: 0.875rem;
            color: #6b7280;
        }
        
        .requirement-icon {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.75rem;
            background: #e5e7eb;
            color: #9ca3af;
            transition: all 0.3s;
        }
        
        .requirement-met .requirement-icon {
            background: #10b981;
            color: white;
        }
    </style>
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="icon">
                <i class="fa-solid fa-key"></i>
            </div>
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="auth-body">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="auth-alert auth-alert-danger">
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <div asp-validation-summary="ModelOnly" class="mb-0"></div>
                </div>
            }

            <div class="auth-alert auth-alert-info mb-4">
                <i class="fa-solid fa-info-circle"></i>
                <p class="mb-0">
                    <strong>راهنما:</strong> یک کلمه عبور قوی و جدید برای حساب کاربری خود انتخاب کنید.
                </p>
            </div>

            <form method="post" class="auth-form">
                <input asp-for="Code" type="hidden" />
                
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">
                        <i class="fa-solid fa-envelope text-info"></i>
                        @Html.DisplayNameFor(m => m.Email)
                    </label>
                    <input asp-for="Email" class="form-control ltr" dir="ltr" readonly />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="fa-solid fa-lock text-success"></i>
                        @Html.DisplayNameFor(m => m.Password)
                    </label>
                    <div class="position-relative">
                        <input asp-for="Password" class="form-control ltr pe-5" id="passwordInput" dir="ltr" placeholder="حداقل 6 کاراکتر" autofocus />
                        <button type="button" class="password-toggle" onclick="togglePassword('passwordInput', 'toggleIcon1')">
                            <i class="fa-solid fa-eye" id="toggleIcon1"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                    <div class="password-strength bg-secondary" id="passwordStrength"></div>
                    
                    <div class="mt-3" id="requirements">
                        <div class="requirement-item" data-requirement="length">
                            <span class="requirement-icon">
                                <i class="fa-solid fa-check"></i>
                            </span>
                            <span>حداقل 6 کاراکتر</span>
                        </div>
                        <div class="requirement-item" data-requirement="uppercase">
                            <span class="requirement-icon">
                                <i class="fa-solid fa-check"></i>
                            </span>
                            <span>شامل حروف بزرگ (A-Z)</span>
                        </div>
                        <div class="requirement-item" data-requirement="lowercase">
                            <span class="requirement-icon">
                                <i class="fa-solid fa-check"></i>
                            </span>
                            <span>شامل حروف کوچک (a-z)</span>
                        </div>
                        <div class="requirement-item" data-requirement="number">
                            <span class="requirement-icon">
                                <i class="fa-solid fa-check"></i>
                            </span>
                            <span>شامل عدد (0-9)</span>
                        </div>
                    </div>
                </div>
                
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="fa-solid fa-check-double text-warning"></i>
                        @Html.DisplayNameFor(m => m.ConfirmPassword)
                    </label>
                    <div class="position-relative">
                        <input asp-for="ConfirmPassword" class="form-control ltr pe-5" id="confirmPasswordInput" dir="ltr" placeholder="تکرار کلمه عبور" />
                        <button type="button" class="password-toggle" onclick="togglePassword('confirmPasswordInput', 'toggleIcon2')">
                            <i class="fa-solid fa-eye" id="toggleIcon2"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="auth-btn auth-btn-primary">
                    <i class="fa-solid fa-check-circle"></i>
                    بازنشانی کلمه عبور
                </button>

                <div class="auth-links">
                    <div class="auth-divider">
                        <span>یا</span>
                    </div>
                    
                    <a asp-action="Login" class="auth-link" style="color: var(--auth-primary); font-weight: 600;">
                        <i class="fa-solid fa-arrow-left text-primary"></i>
                        <span>بازگشت به صفحه ورود</span>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="back-to-home">
        <a href="/">
            <i class="fa-solid fa-home"></i>
            بازگشت به صفحه اصلی
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId, iconId) {
            const passwordInput = document.getElementById(inputId);
            const toggleIcon = document.getElementById(iconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Password strength checker
        document.getElementById('passwordInput').addEventListener('input', function(e) {
            const password = e.target.value;
            const strengthBar = document.getElementById('passwordStrength');
            let strength = 0;
            
            const requirements = {
                length: password.length >= 6,
                uppercase: /[A-Z]/.test(password),
                lowercase: /[a-z]/.test(password),
                number: /\d/.test(password)
            };
            
            Object.keys(requirements).forEach(key => {
                const item = document.querySelector(`[data-requirement="${key}"]`);
                
                if (requirements[key]) {
                    item.classList.add('requirement-met');
                    strength++;
                } else {
                    item.classList.remove('requirement-met');
                }
            });
            
            strengthBar.className = 'password-strength';
            if (strength === 0) strengthBar.classList.add('bg-secondary');
            else if (strength <= 1) strengthBar.classList.add('bg-danger');
            else if (strength <= 2) strengthBar.classList.add('bg-warning');
            else if (strength <= 3) strengthBar.classList.add('bg-info');
            else strengthBar.classList.add('bg-success');
        });

        // Add loading state on form submit (only if valid)
        document.querySelector('form').addEventListener('submit', function(e) {
            // Check if form is valid using jQuery validation
            if ($(this).valid()) {
                this.classList.add('auth-loading');
            }
        });
    </script>
}
