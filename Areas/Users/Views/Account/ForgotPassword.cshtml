@model ForgotPasswordModel
@{
    ViewData["Title"] = "بازیابی کلمه عبور";
    Layout = "~/Areas/Users/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <div class="icon">
                <i class="fa-solid fa-key"></i>
            </div>
            <h1>@ViewData["Title"]</h1>
        </div>

        <div class="auth-body">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div class="auth-alert auth-alert-danger">
                    <i class="fa-solid fa-circle-exclamation"></i>
                    <div asp-validation-summary="All" class="mb-0"></div>
                </div>
            }

            <div class="auth-alert auth-alert-info mb-4">
                <i class="fa-solid fa-info-circle"></i>
                <p class="mb-0">
                    <strong>راهنما:</strong> آدرس ایمیل خود را وارد کنید تا لینک بازیابی کلمه عبور برای شما ارسال شود.
                </p>
            </div>

            <form method="post" class="auth-form">
                <div class="mb-4">
                    <label asp-for="Email" class="form-label">
                        <i class="fa-solid fa-envelope text-info"></i>
                        @Html.DisplayNameFor(m => m.Email)
                    </label>
                    <input asp-for="Email" class="form-control ltr" dir="ltr" placeholder="example@domain.com" autofocus />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                    <small class="text-muted d-block mt-2">
                        <i class="fa-solid fa-lightbulb"></i>
                        ایمیلی که هنگام ثبت‌نام استفاده کرده‌اید را وارد کنید
                    </small>
                </div>

                <button type="submit" class="auth-btn auth-btn-primary">
                    <i class="fa-solid fa-paper-plane"></i>
                    ارسال لینک بازیابی
                </button>

                <div class="auth-links">
                    <div class="auth-divider">
                        <span>یا</span>
                    </div>
                    
                    <a asp-action="Login" class="auth-link" style="color: var(--auth-primary); font-weight: 600;">
                        <i class="fa-solid fa-arrow-left text-primary"></i>
                        <span>بازگشت به صفحه ورود</span>
                    </a>
                    
                    <a asp-action="Register" class="auth-link">
                        <i class="fa-solid fa-user-plus text-success"></i>
                        <span>ایجاد حساب کاربری جدید</span>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="back-to-home">
        <a href="/">
            <i class="fa-solid fa-home"></i>
            بازگشت به صفحه اصلی
        </a>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function(e) {
            // Check if form is valid using jQuery validation
            if ($(this).valid()) {
                this.classList.add('auth-loading');
            }
        });
    </script>
}
