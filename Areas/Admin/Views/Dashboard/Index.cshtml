@model IdentityCoreCustomization.Areas.Admin.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "داشبورد مدیریت";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">
            <i class="fa-solid fa-gauge text-primary"></i> داشبورد مدیریت
        </h1>
        <div class="text-muted">
            <i class="fa-regular fa-clock"></i>
            <span id="current-time"></span>
        </div>
    </div>

    <!-- Stats Cards Row -->
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-primary">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                            <i class="fa-solid fa-users fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 me-3">
                            <div class="text-muted small mb-1">کاربران</div>
                            <div class="fs-3 fw-bold text-primary">@Model.TotalUsers</div>
                            <div class="text-success small">
                                <i class="fa-solid fa-arrow-up"></i> فعال
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-success">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-success bg-opacity-10 text-success rounded-3 p-3">
                            <i class="fa-solid fa-user-tag fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 me-3">
                            <div class="text-muted small mb-1">نقش‌ها</div>
                            <div class="fs-3 fw-bold text-success">@Model.TotalRoles</div>
                            <div class="text-muted small">
                                <i class="fa-solid fa-shield-halved"></i> گروه‌های دسترسی
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-danger">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-danger bg-opacity-10 text-danger rounded-3 p-3">
                            <i class="fa-solid fa-lock fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 me-3">
                            <div class="text-muted small mb-1">کاربران قفل شده</div>
                            <div class="fs-3 fw-bold text-danger">@Model.LockedOutUsers</div>
                            <div class="text-danger small">
                                <i class="fa-solid fa-user-lock"></i> محدود شده
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-sm-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100 stat-card stat-card-info">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-info bg-opacity-10 text-info rounded-3 p-3">
                            <i class="fa-solid fa-signal fa-2x"></i>
                        </div>
                        <div class="flex-grow-1 me-3">
                            <div class="text-muted small mb-1">نشست‌های آنلاین</div>
                            <div class="fs-3 fw-bold text-info">@Model.OnlineSessions</div>
                            <div class="text-success small">
                                <i class="fa-solid fa-circle"></i> فعال
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Details Cards Row -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 detail-card">
                <div class="card-header bg-gradient d-flex align-items-center">
                    <i class="fa-solid fa-envelope text-primary fs-5 ms-2"></i>
                    <span class="fw-bold">وضعیت ایمیل‌ها</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <div>
                                <i class="fa-regular fa-envelope text-warning"></i>
                                <span class="me-2">ایمیل تایید نشده</span>
                            </div>
                            <span class="badge bg-warning text-dark rounded-pill px-3 py-2">@Model.UnconfirmedEmails</span>
                        </li>
                    </ul>
                    <div class="mt-3 p-3 bg-light rounded-3">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-info-circle text-primary ms-2"></i>
                            <small class="text-muted">کاربران با ایمیل تایید نشده نیاز به فعالسازی دارند</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100 detail-card">
                <div class="card-header bg-gradient d-flex align-items-center">
                    <i class="fa-solid fa-phone text-success fs-5 ms-2"></i>
                    <span class="fw-bold">وضعیت تلفن و امنیت</span>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <div>
                                <i class="fa-solid fa-phone text-warning"></i>
                                <span class="me-2">تلفن تایید نشده</span>
                            </div>
                            <span class="badge bg-warning text-dark rounded-pill px-3 py-2">@Model.UnconfirmedPhones</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 py-3">
                            <div>
                                <i class="fa-solid fa-shield-halved text-info"></i>
                                <span class="me-2">فعال‌سازی احراز هویت دو مرحله‌ای</span>
                            </div>
                            <span class="badge bg-info rounded-pill px-3 py-2">@Model.TwoFactorEnabledUsers</span>
                        </li>
                    </ul>
                    <div class="mt-3 p-3 bg-light rounded-3">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-shield-alt text-success ms-2"></i>
                            <small class="text-muted">امنیت بیشتر با احراز هویت دو مرحله‌ای</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Stat Cards Animation */
        .stat-card {
            position: relative;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.5s;
        }

        .stat-card:hover::before {
            left: 100%;
        }

        .stat-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 20px 30px -10px rgba(0, 0, 0, 0.2) !important;
        }

        .stat-icon {
            transition: all 0.3s ease;
        }

        .stat-card:hover .stat-icon {
            transform: scale(1.1) rotate(5deg);
        }

        /* Individual card color accents */
        .stat-card-primary:hover {
            border-right: 4px solid #4f46e5;
        }

        .stat-card-success:hover {
            border-right: 4px solid #10b981;
        }

        .stat-card-danger:hover {
            border-right: 4px solid #ef4444;
        }

        .stat-card-info:hover {
            border-right: 4px solid #3b82f6;
        }

        /* Detail Cards */
        .detail-card {
            animation: fadeInUp 0.6s ease;
        }

        .detail-card .card-header {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        }

        .detail-card .list-group-item {
            transition: all 0.2s ease;
        }

        .detail-card .list-group-item:hover {
            background-color: #f8fafc;
            padding-right: 0.5rem !important;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Stagger animation for cards */
        .stat-card:nth-child(1) {
            animation: fadeInUp 0.4s ease 0.1s backwards;
        }

        .stat-card:nth-child(2) {
            animation: fadeInUp 0.4s ease 0.2s backwards;
        }

        .stat-card:nth-child(3) {
            animation: fadeInUp 0.4s ease 0.3s backwards;
        }

        .stat-card:nth-child(4) {
            animation: fadeInUp 0.4s ease 0.4s backwards;
        }
    </style>
}

@section Scripts {
    <script>
        // Update current time
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('fa-IR', {
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit'
            });
            const dateString = now.toLocaleDateString('fa-IR', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });
            document.getElementById('current-time').textContent = `${dateString} - ${timeString}`;
        }

        updateTime();
        setInterval(updateTime, 1000);
    </script>
}
