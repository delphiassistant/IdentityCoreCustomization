@model List<IdentityCoreCustomization.Classes.Identity.OnlineUserSession>
@{
    ViewData["Title"] = "کاربران آنلاین";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
            padding: 2rem;
            border-radius: 1rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 16px rgba(59, 130, 246, 0.3);
        }

        .page-header h1 {
            color: white;
            border: none;
            margin: 0;
            padding: 0;
        }

        .page-header h1::after {
            display: none;
        }

        .online-status {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-left: 8px;
            box-shadow: 0 0 8px currentColor;
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.6; }
        }

        .status-online { background-color: #10b981; }
        .status-inactive { background-color: #f59e0b; }
        .status-offline { background-color: #ef4444; }
        
        .session-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: none;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .session-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

        .session-card .card-header {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border-bottom: 2px solid #e5e7eb;
            font-weight: 600;
        }
        
        .refresh-indicator {
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .refresh-indicator.show {
            opacity: 1;
        }
        
        .auto-refresh-controls {
            background: white;
            padding: 1.25rem;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }

        .stats-badge {
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-weight: 600;
        }

        .action-toolbar {
            background: white;
            padding: 1.25rem;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }
    </style>
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-0">
                <i class="fa-solid fa-users-gear"></i> @ViewData["Title"]
            </h1>
            <p class="mb-0 mt-2 opacity-75">مشاهده و مدیریت کاربران فعال سیستم</p>
        </div>
        <div class="d-flex flex-column align-items-end gap-2">
            <span class="badge bg-light text-dark stats-badge">
                <i class="fa-solid fa-circle text-success"></i> آنلاین: @ViewBag.OnlineUserCount
            </span>
            <span class="badge bg-light text-dark stats-badge">
                <i class="fa-solid fa-clock"></i> نشست فعال: @ViewBag.ActiveSessionCount
            </span>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fa-solid fa-circle-check"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="fa-solid fa-circle-exclamation"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["WarningMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show">
        <i class="fa-solid fa-exclamation-triangle"></i> @TempData["WarningMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Auto-refresh Controls -->
<div class="auto-refresh-controls">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="autoRefreshToggle" checked>
                <label class="form-check-label fw-semibold" for="autoRefreshToggle">
                    <i class="fa-solid fa-arrows-rotate text-primary"></i> بروزرسانی خودکار (هر 30 ثانیه)
                </label>
            </div>
        </div>
        <div class="col-md-6 text-end">
            <button class="btn btn-outline-primary btn-sm" onclick="refreshOnlineUsers()">
                <i class="fa-solid fa-refresh" id="refreshIcon"></i> بروزرسانی دستی
            </button>
            <small class="text-muted d-block mt-2">
                آخرین بروزرسانی: <span id="lastRefresh" class="fw-semibold">@ViewBag.RefreshTime</span>
                <span class="refresh-indicator ms-2" id="refreshIndicator">
                    <i class="fa-solid fa-spinner fa-spin text-primary"></i>
                </span>
            </small>
        </div>
    </div>
</div>

<!-- Management Actions -->
<div class="action-toolbar">
    <div class="d-flex flex-wrap gap-2">
        <form id="cleanupForm" method="post" asp-action="CleanupExpiredSessions" style="display: inline;">
            @Html.AntiForgeryToken()
            <button type="button" id="cleanupBtn" class="btn btn-warning">
                <i class="fa-solid fa-broom"></i> پاک‌سازی نشست‌های منقضی
            </button>
        </form>
        <form id="clearAllForm" method="post" asp-action="ClearAllSessions" style="display: inline;">
            @Html.AntiForgeryToken()
            <button type="button" id="clearAllBtn" class="btn btn-danger">
                <i class="fa-solid fa-power-off"></i> خروج همه کاربران
            </button>
        </form>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fa-solid fa-info-circle fa-3x mb-3 d-block"></i>
        <h4>هیچ کاربری آنلاین نیست</h4>
        <p class="mb-0">در حال حاضر هیچ کاربر فعالی در سیستم موجود نیست.</p>
    </div>
}
else
{
    <!-- Online Users List -->
    <div class="row" id="onlineUsersList">
        @foreach (var user in Model)
        {
            <div class="col-lg-6 col-xl-4 mb-4">
                <div class="card session-card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <span class="online-status @(user.IsActive ? "status-online" : user.IsExpired ? "status-offline" : "status-inactive")"></span>
                            <i class="fa-solid fa-user-circle text-primary ms-2"></i>
                            <strong>@user.UserName</strong>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="fa-solid fa-ellipsis-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form method="post" asp-controller="UserSessions" asp-action="ForceLogoutUser">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <input type="hidden" name="userName" value="@user.UserName" />
                                        <button type="button" class="dropdown-item text-danger force-logout-btn" 
                                                data-username="@user.UserName">
                                            <i class="fa-solid fa-sign-out-alt"></i> خروج اجباری
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="javascript:void(0)" onclick="showUserDetails('@user.UserId', '@user.UserName')">
                                        <i class="fa-solid fa-info-circle"></i> جزئیات نشست
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-envelope text-primary ms-2"></i>
                                    <div>
                                        <small class="text-muted d-block">ایمیل</small>
                                        <span class="fw-normal">@(user.Email ?? "ثبت نشده")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-phone text-success ms-2"></i>
                                    <div>
                                        <small class="text-muted d-block">تلفن</small>
                                        <span class="fw-normal ltr d-inline-block">@(user.PhoneNumber ?? "ثبت نشده")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-clock text-info ms-2"></i>
                                    <div>
                                        <small class="text-muted d-block">مدت نشست</small>
                                        <span class="fw-semibold text-info">@user.SessionDuration.ToString(@"hh\:mm\:ss")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-history text-warning ms-2"></i>
                                    <div>
                                        <small class="text-muted d-block">آخرین فعالیت</small>
                                        <span class="fw-semibold text-warning">@user.TimeSinceLastActivity.ToString(@"hh\:mm\:ss")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex align-items-center">
                                    <i class="fa-solid fa-calendar-alt text-secondary ms-2"></i>
                                    <div>
                                        <small class="text-muted d-block">زمان ورود</small>
                                        <span class="fw-normal">@user.LoginTime.ToString("yyyy/MM/dd HH:mm:ss")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge @(user.IsActive ? "bg-success" : user.IsExpired ? "bg-danger" : "bg-warning")">
                                <i class="fa-solid fa-circle"></i>
                                @(user.IsActive ? "فعال" : user.IsExpired ? "منقضی" : "غیرفعال")
                            </span>
                            <small class="text-muted">
                                <i class="fa-solid fa-ticket"></i> #@user.TicketId
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- User Details Modal -->
<div class="modal fade" id="userDetailsModal" tabindex="-1" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-gradient">
                <h5 class="modal-title" id="userDetailsModalLabel">
                    <i class="fa-solid fa-info-circle text-primary"></i> جزئیات نشست کاربر
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="userDetailsContent">
                <div class="text-center py-4">
                    <i class="fa-solid fa-spinner fa-spin fa-3x text-primary mb-3"></i>
                    <p class="text-muted">در حال بارگذاری...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fa-solid fa-times"></i> بستن
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Force Logout Confirmation Modal (Bootstrap) -->
<div class="modal fade" id="forceLogoutConfirmModal" tabindex="-1" aria-labelledby="forceLogoutConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="forceLogoutConfirmModalLabel">
                    <i class="fa-solid fa-sign-out-alt"></i> تأیید خروج اجباری
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">آیا می‌خواهید کاربر <strong id="forceLogoutUserName"></strong> را از سیستم خارج کنید؟</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-warning" id="confirmForceLogoutBtn">
                    <i class="fa-solid fa-check"></i> تأیید خروج
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Cleanup Confirmation Modal -->
<div class="modal fade" id="cleanupConfirmModal" tabindex="-1" aria-labelledby="cleanupConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="cleanupConfirmModalLabel">
                    <i class="fa-solid fa-broom"></i> تأیید پاک‌سازی نشست‌های منقضی
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">آیا می‌خواهید نشست‌های منقضی شده را پاک کنید؟</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-warning" id="confirmCleanupBtn">
                    <i class="fa-solid fa-check"></i> تأیید
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Clear All Sessions Confirmation Modal -->
<div class="modal fade" id="clearAllConfirmModal" tabindex="-1" aria-labelledby="clearAllConfirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white" id="clearAllConfirmModalLabel">
                    <i class="fa-solid fa-power-off"></i> هشدار: خروج همه کاربران
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">این عمل همه کاربران را از سیستم خارج می‌کند.</p>
                <p class="mb-0">آیا مطمئن هستید که می‌خواهید ادامه دهید؟</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">انصراف</button>
                <button type="button" class="btn btn-danger" id="confirmClearAllBtn">
                    <i class="fa-solid fa-check"></i> تأیید خروج همه
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let autoRefreshInterval;
        let isRefreshing = false;
        let _forceLogoutCtx = null;

        $(document).ready(function() {
            toggleAutoRefresh();
            $('#autoRefreshToggle').change(function() { toggleAutoRefresh(); });
            setTimeout(function() { $('.alert-dismissible').alert('close'); }, 5000);

            $.ajaxSetup({ headers: { 'X-Requested-With': 'XMLHttpRequest' } });

            // Force logout confirm flow
            $(document).on('click', '.force-logout-btn', function (e) {
                e.preventDefault();
                const $btn = $(this);
                const $form = $btn.closest('form');
                const userName = $btn.data('username') || $form.find('input[name="userName"]').val() || '';
                _forceLogoutCtx = { $btn, $form, originalHtml: $btn.html() };
                $('#forceLogoutUserName').text(userName);
                $('#forceLogoutConfirmModal').modal('show');
            });

            $(document).on('click', '#confirmForceLogoutBtn', function () {
                if (!_forceLogoutCtx) return;
                const { $btn, $form, originalHtml } = _forceLogoutCtx;
                $btn.html('<i class="fa-solid fa-spinner fa-spin"></i> در حال خروج...').prop('disabled', true);
                $.ajax({ url: $form.attr('action') || '@Url.Action("ForceLogoutUser","UserSessions")', method: 'POST', data: $form.serialize() })
                    .done(function () { window.location.reload(); })
                    .fail(function () { alert('خطا در خروج اجباری کاربر'); })
                    .always(function () { $btn.prop('disabled', false).html(originalHtml); _forceLogoutCtx = null; $('#forceLogoutConfirmModal').modal('hide'); });
            });

            // Cleanup confirm flow: submit original form after confirm
            $('#cleanupBtn').on('click', function () { $('#cleanupConfirmModal').modal('show'); });
            $('#confirmCleanupBtn').on('click', function () { $('#cleanupForm')[0].submit(); });

            // Clear all confirm flow: submit original form after confirm
            $('#clearAllBtn').on('click', function () { $('#clearAllConfirmModal').modal('show'); });
            $('#confirmClearAllBtn').on('click', function () { $('#clearAllForm')[0].submit(); });
        });

        function toggleAutoRefresh() {
            const isEnabled = $('#autoRefreshToggle').is(':checked');
            if (isEnabled) { autoRefreshInterval = setInterval(refreshOnlineUsers, 30000); }
            else if (autoRefreshInterval) { clearInterval(autoRefreshInterval); }
        }

        function refreshOnlineUsers() {
            if (isRefreshing) return;
            isRefreshing = true;
            $('#refreshIcon').addClass('fa-spin');
            $('#refreshIndicator').addClass('show');

            $.get('@Url.Action("GetOnlineUsers")')
                .done(function(data) { if (data.success) { updateUsersList(data); $('#lastRefresh').text(new Date().toLocaleString('fa-IR')); } })
                .always(function() { isRefreshing = false; $('#refreshIcon').removeClass('fa-spin'); setTimeout(function() { $('#refreshIndicator').removeClass('show'); }, 500); });
        }

        function updateUsersList(data) {
            $('.badge:contains("آنلاین")').html('<i class="fa-solid fa-circle"></i> آنلاین: ' + data.onlineCount);
            $('.badge:contains("نشست فعال")').html('<i class="fa-solid fa-clock"></i> نشست فعال: ' + data.activeSessionCount);
        }

        function showUserDetails(userId, userName) {
            $('#userDetailsModal').modal('show');
            $('#userDetailsContent').html('<div class="text-center"><i class="fa-solid fa-spinner fa-spin fa-2x text-primary"></i><p class="mt-2">در حال بارگذاری...</p></div>');
            $.get('@Url.Action("GetUserSessions")', { userId: userId })
                .done(function(data) {
                    if (data.success) {
                        let content = '<h6>جزئیات نشست‌های کاربر: ' + userName + '</h6>';
                        content += '<div class="table-responsive"><table class="table table-striped"><thead><tr><th>شناسه نشست</th><th>زمان ورود</th><th>آخرین فعالیت</th><th>مدت نشست</th><th>وضعیت</th></tr></thead><tbody>';
                        data.sessions.forEach(function(session) {
                            const statusBadge = session.isActive ? '<span class="badge bg-success">فعال</span>' : session.isExpired ? '<span class="badge bg-danger">منقضی</span>' : '<span class="badge bg-warning">غیرفعال</span>';
                            content += `<tr><td>${session.ticketId}</td><td>${session.loginTime}</td><td>${session.lastActivity}</td><td>${session.sessionDuration}</td><td>${statusBadge}</td></tr>`;
                        });
                        content += '</tbody></table></div>';
                        if (data.sessions.length === 0) { content += '<div class="alert alert-info">هیچ نشست فعالی یافت نشد.</div>'; }
                        $('#userDetailsContent').html(content);
                    } else {
                        $('#userDetailsContent').html('<div class="alert alert-danger">' + data.error + '</div>');
                    }
                })
                .fail(function() { $('#userDetailsContent').html('<div class="alert alert-danger">خطا در بارگذاری اطلاعات</div>'); });
        }

        $(window).on('beforeunload', function() { if (autoRefreshInterval) { clearInterval(autoRefreshInterval); } });
    </script>
}

