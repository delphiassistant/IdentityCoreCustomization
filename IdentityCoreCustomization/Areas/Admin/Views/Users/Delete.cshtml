@model IdentityCoreCustomization.Models.Identity.ApplicationUser

@{
    ViewData["Title"] = "حذف کاربر";
}

<h1>حذف کاربر</h1>

<div class="alert alert-danger">
    <h4 class="alert-heading">
        <i class="fa-solid fa-exclamation-triangle"></i> هشدار!
    </h4>
    <p>آیا مطمئن هستید که می‌خواهید کاربر <strong>@Model.UserName</strong> را حذف کنید؟</p>
    <hr>
    <p class="mb-0">این عمل غیرقابل بازگشت است و تمام اطلاعات مربوط به این کاربر حذف خواهد شد.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">اطلاعات کاربر</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-4">شناسه:</dt>
                    <dd class="col-8">@Model.Id</dd>
                    
                    <dt class="col-4">نام کاربری:</dt>
                    <dd class="col-8">@Model.UserName</dd>
                    
                    <dt class="col-4">ایمیل:</dt>
                    <dd class="col-8">@(Model.Email ?? "ثبت نشده")</dd>
                    
                    <dt class="col-4">شماره تلفن:</dt>
                    <dd class="col-8">@(Model.PhoneNumber ?? "ثبت نشده")</dd>
                    
                    <dt class="col-4">گروه‌ها:</dt>
                    <dd class="col-8">
                        @if (Model.UserRoles?.Any() == true)
                        {
                            @foreach (var userRole in Model.UserRoles)
                            {
                                <span class="badge bg-primary me-1">@userRole.Role?.Name</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">هیچ گروهی</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-3">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fa-solid fa-trash"></i> تأیید حذف
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-times"></i> انصراف
                </a>
            </form>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fa-solid fa-info-circle"></i> نکات مهم
                </h5>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    <li>تمام اطلاعات کاربر از سیستم حذف خواهد شد</li>
                    <li>تمام نقش‌های اختصاص داده شده حذف می‌شود</li>
                    <li>سوابق ورود و فعالیت کاربر حذف خواهد شد</li>
                    <li>این عمل غیرقابل بازگشت است</li>
                    <li>در صورت نیاز، می‌توانید کاربر را قفل کنید تا حذف نکنید</li>
                </ul>
            </div>
        </div>

        @if (Model.UserName == User.Identity.Name)
        {
            <div class="alert alert-warning mt-3">
                <i class="fa-solid fa-exclamation-triangle"></i>
                <strong>توجه:</strong> شما نمی‌توانید حساب کاربری خود را حذف کنید.
            </div>
        }
    </div>
</div>