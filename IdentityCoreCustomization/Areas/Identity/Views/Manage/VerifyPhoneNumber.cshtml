@model IdentityCoreCustomization.Models.Identity.UserPhoneTokenConfirmViewModel

@{
    ViewData["Title"] = "تایید شماره موبایل";
    
}

<div class="row">
    <div class="col-md-6" >
        <h1>@ViewData["Title"]</h1>
        <hr/>
        <form asp-action="VerifyPhoneNumber">
            <input type="hidden" asp-for="AuthenticationKey"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="AuthenticationCode" class="form-label"></label>
                <input asp-for="AuthenticationCode" class="form-control"/>
                <span asp-validation-for="AuthenticationCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" value="Create" class="btn btn-primary">
                    <i class="fa-solid fa-comment-sms"></i> بررسی
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}